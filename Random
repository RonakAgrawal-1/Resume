# Define the API endpoint to retrieve a user's profile
profile_url = 'https://api.linkedin.com/v2/me'

# Set the request headers
headers = {
    'Authorization': f'Bearer {access_token}',
    'Connection': 'Keep-Alive',
}

# Make the API request
response = requests.get(profile_url, headers=headers)

# Check the response status code and parse the data
if response.status_code == 200:
    user_data = response.json()
    # Extract the About section and certifications from user_data
    about_section = user_data.get('about')
    certifications = user_data.get('certifications')
    print(f'About Section: {about_section}')
    print(f'Certifications: {certifications}')
else:
    print(f'Error: {response.status_code}')
